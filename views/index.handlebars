<h1>Eat-Da-Burger</h1>

<div class="input-div">
    <form action="/add" method="POST">
        <input type="text" name="burger_name" maxlength="50" placeholder="Enter burger name">
        <button type="submit">Add</button>
    </form>
</div>

<div class="burger-lists">
    <div class="to-eat">
        <h2>To eat...</h2>
            <ul>
            {{#each burgers}}
                {{#unless this.devoured}}
                    <li>
                        {{this.burger_name}}
                        <form action="/devour/{{this.id}}?_method=PUT" method="POST">
                            <button type="submit" name="devoured" value="true"></button>
                        </form>
                    </li>
            </ul>
    </div>
    <div class="eaten"></div>
</div>
